<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/misc_tweaks_title" >

        <PreferenceCategory
            android:title="@string/category_customization_title" >

            <ListPreference
                android:key="lcd_density"
                android:title="@string/custom_density_title"
                android:entries="@array/lcd_density_entries"
                android:entryValues="@array/lcd_density_entries" />

             <CheckBoxPreference
                android:key="disable_fc_notifications"
                android:title="@string/disable_fc_notifications_title"
                android:persistent="false" />

        </PreferenceCategory>

        <PreferenceCategory
            android:title="@string/category_app_launchers_title" >

            <PreferenceScreen
                android:key="app_circle_sidebar"
                android:title="@string/app_circle_bar_title"
                android:fragment="com.android.settings.zrom.AppCircleSidebar" />

            <PreferenceScreen
                android:key="app_sidebar"
                android:fragment="com.android.settings.zrom.AppSidebar"
                android:title="@string/app_sidebar_title" />

            <PreferenceScreen
                android:key="gesture_anywhere"
                android:fragment="com.android.settings.zrom.gestureanywhere.GestureAnywhereSettings"
                android:title="@string/gesture_anywhere_title" />

        </PreferenceCategory>

        <PreferenceCategory
            android:title="@string/category_misc_title" >

            <PreferenceScreen
                android:key="lock_clock"
                android:title="@string/lock_clock_title">
                <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.cyanogenmod.lockclock"
                    android:targetClass="com.cyanogenmod.lockclock.preference.Preferences" />
            </PreferenceScreen>

            <PreferenceScreen
                android:id="@+id/identicons"
                android:title="@string/identicons_title"
                android:fragment="com.android.settings.zrom.identicons.IdenticonsSettings" />

            <PreferenceScreen
                android:key="shake_events"
                android:title="@string/shake_events_title"
                android:fragment="com.android.settings.zrom.ShakeEvents" />

            <PreferenceScreen
                android:id="@+id/weather"
                android:title="@string/weather_settings_title"
                android:fragment="com.android.settings.zrom.Weather" />

        </PreferenceCategory>

        <PreferenceCategory
            android:title="@string/performance_title" >

        <PreferenceScreen
            android:id="@+id/kernel_tweaker"
            android:title="@string/kernel_tweaker_title" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.dsht.kerneltweaker.MainActivity"
                android:targetPackage="com.dsht.kerneltweaker" />
        </PreferenceScreen>

        </PreferenceCategory>

</PreferenceScreen>
